        <div class="info-page {{ subpage and loop.index != 1 ? 'page-inactive' : 'page-active'}}" id="{{subpage.slug ?: page.slug }}" data-background="{{TimberImage(subpage.get_field('slide_image')).src}}">
          <div class="container main-pages">
            <h2 class="featurette-heading center-block">{{subpage.title ?: page.title }}</h2>
            {% if page.children %}
            <div class="col-md-7">
              <p class="lead">{{subpage.content ?: page.content }}</p>
            </div>        
            <div class="col-md-5">
            <p class="lead"></p>
              <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">{{page.title}}</div>
                  <!-- List group -->
                <ul class="list-group page-nav">
                  {% for subpage in page.children %}
                    <li class="list-group-item"><a href="#{{subpage.slug}}">{{subpage.title}}</a></li>
                  {% endfor %}
                </ul>
              </div>
              {% else %}
              <p class="lead">{{subpage.content ?: page.content }}</p>
              {% endif %}
            </div>        
          </div>
      </div>          