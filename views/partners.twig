<div class="info-page {{ subpage and loop.index != 1 ? 'page-inactive' : 'page-active'}}" id="{{subpage.slug ?: page.slug }}" data-background="{{function('jetpack_photon_url', TimberImage(subpage.get_field('slide_image')).src ?: TimberImage(page.get_field('slide_image')).src)}}">
<div class="container main-pages" id ="{{page.slug}}">
  <h2 class="featurette-heading center-block" style="font-family:font-family:'Open Sans', sans-serif; font-weight:bold;">{{page.title}}</h2>
  <div class="row">
    {% for partner in partners %}
        <div class="col-lg-4">          
          <h2><a href="{{partner.partner_link}}">{{partner.title}}</a></h2>
          <h4 class="text-muted">{{partner.partner_tagline}}</h4>
          <p>{{partner.content}}</p>          
        </div><!-- /.col-lg-4 -->
        {% if loop.index % 3 == 0 %}
        </div>
        <div class="row">
        {% endif %}
    {% endfor %}        
  </div>
</div>   
</div>


